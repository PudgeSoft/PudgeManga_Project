@model PudgeManga_Project.ViewModels.RegisterViewModel
<!DOCTYPE html>
@{
    ViewData["Title"] = "Sign up";
}
@if (TempData["Error"] != null)
{
    <div class="col-md-12 alert alert-danger">
        <span><b>Sorry!</b> - @TempData["Error"] </span>
    </div>
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../src/css/login.css">
    <title>pudge soft corporation</title> <!--change title-->
    <link href="https://fonts.googleapis.com/css2?family=Cherry+Bomb+One&display=swap" rel="stylesheet">
    <!--logo font-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400&display=swap" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <!--bootstrap css link-->

</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script> <!--bootstrap js link-->

    <main class="d-flex flex-column align-items-center justify-content-center">
        <form asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form p-3 text-start">
                <h2 class="fs-4">SIGN UP</h2>
                <div class="mb-3">
                    <label asp-for="UserName" class="control-label"></label>
                    <input asp-for="UserName" class="form-control" style="width: 120%;" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="EmailAddress" class="control-label"></label>
                    <input asp-for="EmailAddress" class="form-control" style="width: 120%;" />
                    <span asp-validation-for="EmailAddress" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" class="form-control" style="width: 120%;" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label"></label>
                    <input asp-for="ConfirmPassword" class="form-control" style="width: 120%;" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="exampleCheck1">
                    <label class="form-check-label" for="exampleCheck1">Запам'ятати мене</label>
                </div>
                <div class="d-flex justify-content-between">
                    <input type="submit" class="btn btn-danger" style="width: 48%;" value="SIGN UP" />
                    <a href="@Url.Action("Index", "Home")" class="btn btn-danger" style="width: 48%;">Cancel</a>
                </div>
            </div>
        </form>
        <div class="hr mb-3"></div>
        <div class="text-center">Реєстрація за допомогою соц мереж</div>
        <div class="d-flex social justify-content-center mt-3">
            <a href="#" class="btn btn-primary mx-2">Facebook</a>
            <a href="#" class="btn btn-info mx-2">Telegram</a>
            <!-- Add more social media buttons as needed -->
        </div>
        <div class="text-center mt-3">
            <span>Вже маєте акаунт? </span>
            <span><a href="@Url.Action("Login", "Account")" class="text-white">Увійти</a></span>
        </div>
    </main>
</body>

