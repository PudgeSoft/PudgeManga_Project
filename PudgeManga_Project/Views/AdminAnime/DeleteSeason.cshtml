@model PudgeManga_Project.Models.AnimeSeason

@{
    ViewData["Title"] = "Delete";
}
<head>
    <link rel="stylesheet" href="~/css/admin.css" type="text/css" asp-append-version="true" />
</head>
<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Season</h4>
    <hr />
    <dl class="row">
        <dd>
            @Html.DisplayNameFor(model => model.SeasonNumber)
        </dd>
        <dd>
            @Html.DisplayNameFor(model => model.Title)
        </dd>
    </dl>

    <form asp-action="DeleteSeason" asp-route-seasonId="@Model.AnimeSeasonId" method="post">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Seasons" asp-route-animeId="@ViewData["AnimeId"]">Back to List</a>
    </form>

</div>
