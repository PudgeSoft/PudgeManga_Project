@model PudgeManga_Project.Models.Anime

@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/admin.css" type="text/css" asp-append-version="true" />
</head>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Anime Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Title:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>

        <dt class="col-sm-2">Description:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt class="col-sm-2">Cover URL:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ImageUrl)
        </dd>

        <dt class="col-sm-2">Director:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Director)
        </dd>

        <dt class="col-sm-2">Studio:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Studio)
        </dd>

        <dt class="col-sm-2">Dubbing:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Dubbing)
        </dd>

        <dt class="col-sm-2">Type:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Type)
        </dd>

        <dt class="col-sm-2">Release Year:</dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReleaseYear)
        </dd>

        <dt class="col-sm-2">Genres:</dt>
        <dd class="col-sm-10">
            @foreach (var genre in Model.AnimeGenres)
            {
                @genre.GenreForAnime.Name
                <br />
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="AnimeId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
