<!DOCTYPE html>
<html html lang="en" data-bs-theme="dark">

<head runat="server">
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - PudgeManga_Project</title>
	<link rel="stylesheet" href="~/css/header_footer.css" type="text/css" asp-append-version="true" />
	<link rel="icon" type="image/png" href="~/src/favicon.ico" sizes="32x32">
	<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cherry+Bomb+One&display=swap" />
	<!--logo font-->
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
		integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous" />
	<!--bootstrap css link-->
	<link rel="preconnect" href="https://fonts.googleapis.com">
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
	<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300;400&display=swap" rel="stylesheet">
	<!--text font-->

</head>

<body>

	<header class="p-3 navbar-expand-lg">
		<div class="container-fluid">
			<div class="d-flex flex-wrap align-items-center justify-content-between ">
				<div class="d-lg-none d-flex"></div>
				<div class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none col-lg-2">
					<h4 class="fw-bold fs-3" id="logo"><a href="/">PUDGE SOFT</a></h4>
				</div> <!--logo (pudge soft)-->


				<ul
					class="nav col-12 container col-lg-auto mb-2 align-items-center justify-content-between mb-md-0 col-lg-8 order-3 order-lg-2">

					<button class="navbar-toggler order-1" type="button" data-bs-toggle="collapse"
						data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
						<div class="toggler-icon"></div>
					</button>
					<ul class=" collapse navbar-collapse navbar-nav me-auto mb-2 mb-lg-0 justify-content-around order-3"
						id="navbarSupportedContent">
						<li class="d-none d-lg-block">
							<div class="dropdown">
								<button class="nav-link dropdown-toggle text-white fs-5 pb-0 px-2" type="button"
									data-bs-toggle="dropdown" aria-expanded="false">
									Тип контенту
								</button>
								<ul class="dropdown-menu">
									<li><a class="dropdown-item" asp-controller="Anime" asp-action="Index">Аніме</a>
									</li>
									<li><a class="dropdown-item" asp-controller="Manga" asp-action="Index">Манга</a>
									</li>
								</ul>
							</div>
						</li><!--anime button-->
						<li><a class="nav-link px-2 pb-0 text-white fs-5" asp-area="" asp-controller="Search"
								asp-action="Index"> Пошук</a></li>
						<li><a class="nav-link px-2 pb-0 text-white fs-5" asp-area="" asp-controller="Forum"
								asp-action="Index">Форум</a></li>
						<li><a class="nav-link px-2 pb-0 text-white fs-5" asp-area="" asp-controller="Calendar"
								asp-action="Index">Календар</a></li>
						<li><a class="nav-link px-2 pb-0 text-white fs-5" asp-area="" asp-controller="About_us"
								asp-action="Index">Про нас</a></li>
					</ul>
					<!--all categories-->

					<li class="order-2 d-block d-lg-none">
						<div class="dropdown">
							<button class="nav-link dropdown-toggle text-white fs-5 pb-0 px-2" type="button"
								data-bs-toggle="dropdown" aria-expanded="false">
								Тип контенту
							</button>
							<ul class="dropdown-menu">
								<li><a class="dropdown-item" asp-controller="Anime" asp-action="Index">Аніме</a></li>
								<li><a class="dropdown-item" asp-controller="Manga" asp-action="Index">Манга</a></li>
							</ul>
						</div>
					</li><!--anime button-->

				</ul>



				<div class="col-lg-2 order-2 order-lg-3">
					<div class="dropdown text-end ">

						<a href="#" class=" link-body-emphasis text-decoration-none dropdown-toggle"
							data-bs-toggle="dropdown" aria-expanded="false">
							<img src="~/src/img/user_icon.png" alt="mdo" width="32" height="32" class="rounded-circle">
						</a>

						<ul class="dropdown-menu text-small">
                            @if (User.Identity.IsAuthenticated)
                            {
                            <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Вийти</a></li>

									<a class="dropdown-item" asp-area="" asp-controller="User" asp-action="Detail" asp-route-id="@User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value">Мій кабінет</a>

                            }
							else{
							<li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login"> Увійти</a></li>
							<li>
								<hr class="dropdown-divider">
							</li>
							<li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Зареєструватись</a></li>
							}
						</ul>
					</div> <!--block for user button-->
				</div>


			</div>
		</div>
	</header>






	<main role="main">
		@RenderBody()
	</main>






	<footer class=" pt-5 ">
		<div class="container">
			<div class="row justify-content-between">
				<!--row with links on left and social media icons on the right-->


				<div class="col-6 mb-2 ">
					<ul class="nav flex-column">
						<li class="nav-item mb-2 pt-2 pb-4">
							<a class="nav-link p-0 text-body-secondary" asp-area="" asp-controller="Home"
								asp-action="TermsOfUse">
								Умови
								використання
							</a>
						</li>
						<li class="nav-item mb-2 pb-4">
							<a class="nav-link p-0 text-body-secondary" asp-area="" asp-controller="Home"
								asp-action="Advertisement">
								Реклама на
								сайті
							</a>
						</li>
						<li class="nav-item mb-2 pb-4">
							<a class="nav-link p-0 text-body-secondary" asp-area="" asp-controller="Home"
								asp-action="Privacy">
								Політика
								конфіденційності
							</a>
						</li>
					</ul>

				</div> <!--block with links-->



				<div class="col-6 mb-2 d-flex justify-content-end">
					<div class="nav flex-column">
						<ul class="list-unstyled d-flex flex-column">
							<li class="ms-3 pb-1">
								<a class="link-body-emphasis" href="https://www.instagram.com/pudgesoft/">
									<img src="~/src/img/camera_1439242.png" class="footer_social">
								</a>
							</li>
							<li class="ms-3 pb-1">
								<a class="link-body-emphasis" href="https://www.facebook.com/groups/716701040343177">
									<img src="~/src/img/facebook_665209.png" class="footer_social">
								</a>
							</li>
							<li class="ms-3 pb-1">
								<a class="link-body-emphasis" href="https://t.me/Vadimzakl">
									<img src="~/src/img/telegram_2111813.png" class="footer_social">
								</a>
							</li>
							<li class="ms-3 ">
								<a class="link-body-emphasis" href="mailto:pudgesoftcompany@gmail.com">
									<img src="~/src/img/message_10165079.png" class="footer_social">
								</a>
							</li>
						</ul>
					</div>
				</div> <!--block with social-->

			</div>

			<div class="d-flex justify-content-center py-4 border-top">
				<p>© 2023 Pudge Soft, Inc. All rights reserved.</p>
			</div>
		</div>
	</footer>



	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
		crossorigin="anonymous"></script> <!--bootstrap js link-->
	@await RenderSectionAsync("Scripts", required: false)
</body>

</html>
