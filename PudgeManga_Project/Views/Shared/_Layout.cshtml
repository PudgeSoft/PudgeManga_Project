<!DOCTYPE html>
<html html lang="en" data-bs-theme="dark">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PudgeManga_Project</title>
    <!--<link rel="stylesheet" href="~/PudgeManga_Project.styles.css" asp-append-version="true" />-->
    <link rel="stylesheet" href="~/css/header_footer.css"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cherry+Bomb+One&display=swap" />
    <!--logo font-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous"/>
    <!--bootstrap css link-->

</head>
<body>
    <header class="p-3">
        <div class="container-fluid">
            <div class="d-flex flex-wrap align-items-center justify-content-between ">

                <a href="/"
                   class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none col-lg-2">
                    <h4 class="fw-bold fs-4" id="logo">PUDGE SOFT</h4>
                </a> <!--logo (pudge soft)-->


                <ul class="nav col-12 col-lg-auto mb-2 align-items-center justify-content-between mb-md-0 col-lg-8 order-3 order-lg-2">

                    <li>
                        <div class="dropdown">
                            <button class="btn btn-dark dropdown-toggle text-white-50" type="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                Манга
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">?</a></li>
                                <li><a class="dropdown-item" href="#">?</a></li>
                            </ul>
                        </div>
                    </li> <!--manga button-->

                    <li><a class="nav-link px-2 text-white-50">Пошук</a></li>
                    <li><a class="nav-link px-2 text-white-50" asp-area="" asp-controller="Forum" asp-action="Index" >Форум</a></li>
                    <li><a class="nav-link px-2 text-white-50" asp-area="" asp-controller="Calendar" asp-action="Index" >Календар</a></li>
                    <li><a class="nav-link px-2 text-white-50" asp-area="" asp-controller="Reviews" asp-action="Index">Рецензії</a></li>
                    <li><a class="nav-link px-2 text-white-50" asp-area="" asp-controller="About_us" asp-action="Index">Про нас</a></li>
                    <li><a class="nav-link px-2 text-white-50">FAQ</a></li>
                    <!--all categories-->

                    <li>
                        <div class="dropdown">
                            <button class="btn btn-dark dropdown-toggle text-white-50" type="button"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                Аніме
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="#">?</a></li>
                                <li><a class="dropdown-item" href="#">?</a></li>
                            </ul>
                        </div>
                    </li><!--anime button-->

                </ul>



                <div class="dropdown text-end col-lg-2 order-2 order-lg-3">
                    <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
                       data-bs-toggle="dropdown" aria-expanded="false">
                        <img src="~/src/img/user_icon.png" alt="mdo" width="32" height="32" class="rounded-circle">
                    </a>
                    <ul class="dropdown-menu text-small">
                        <li><a class="dropdown-item" href="#">Sign in</a></li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>
                        <li><a class="dropdown-item" href="#">Sign out</a></li>
                    </ul>
                </div> <!--block for user button-->


            </div>
        </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="container pt-5 ">
        <div class="row justify-content-between">
            <!--row with links on left and social media icons on the right-->


            <div class="col-6 mb-2 ">
                <ul class="nav flex-column">
                    <li class="nav-item mb-2 pb-1">
                        <a class="nav-link p-0 text-body-secondary" asp-area="" asp-controller="Home" asp-action="TermsOfUse">
                            Умови
                            використання
                        </a>
                    </li>
                    <li class="nav-item mb-2 pb-1">
                        <a class="nav-link p-0 text-body-secondary" asp-area="" asp-controller="Home" asp-action="Advertisement">
                            Реклама на
                            сайті
                        </a>
                    </li>
                    <li class="nav-item mb-2 pb-1">
                        <a class="nav-link p-0 text-body-secondary" asp-area="" asp-controller="Home" asp-action="Privacy">
                            Політика
                            конфіденційності
                        </a>
                    </li>
                </ul>
            </div> <!--block with links-->



            <div class="col-6 mb-2 d-flex justify-content-end">
                <div class="nav flex-column">
                    <ul class="list-unstyled d-flex flex-column">
                        <li class="ms-3 pb-1">
                            <a class="link-body-emphasis" href="#">
                                <img src="~/src/img/camera_1439242.png" class="footer_social">
                            </a>
                        </li>
                        <li class="ms-3 pb-1">
                            <a class="link-body-emphasis" href="#">
                                <img src="~/src/img/facebook_665209.png" class="footer_social">
                            </a>
                        </li>
                        <li class="ms-3 pb-1">
                            <a class="link-body-emphasis" href="#">
                                <img src="~/src/img/telegram_2111813.png" class="footer_social">
                            </a>
                        </li>
                        <li class="ms-3 ">
                            <a class="link-body-emphasis" href="#">
                                <img src="~/src/img/play_3024584.png"
                                     class="footer_social">
                            </a>
                        </li>
                    </ul>
                </div>
            </div> <!--block with social-->

        </div>

        <div class="d-flex justify-content-center py-4 my-4 border-top">
            <p>© 2023 Pudge Soft, Inc. All rights reserved.</p>
        </div>

    </footer>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm"
            crossorigin="anonymous"></script> <!--bootstrap js link-->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
