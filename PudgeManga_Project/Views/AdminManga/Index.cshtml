@model IEnumerable<PudgeManga_Project.Models.Manga>

@{
    ViewData["Title"] = "Index";
}
<head>
    <link rel="stylesheet" href="~/css/admin.css" type="text/css" asp-append-version="true" />
</head>
<h1>Vadym skazav napysaty tut admin panel</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CoverUrl)
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.GenreId)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CoverUrl)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => item.GenreId)
            </td>*@
            <td>
                <a asp-action="Edit" asp-route-id="@item.MangaId">Edit</a> 
                <a asp-action="Chapters" asp-route-mangaId="@item.MangaId">Chapters</a>
                <a asp-action="Delete" asp-route-id="@item.MangaId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
