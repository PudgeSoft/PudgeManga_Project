@model PudgeManga_Project.ViewModels.AnimeViewModels.AnimeDetailsViewModel
<head>
    <link rel="stylesheet" href="~/css/anime.css" asp-append-version="true">
    <link href="https://vjs.zencdn.net/8.6.1/video-js.css" rel="stylesheet" /> <!-- player link-->

</head>
<body>
    <div class="container py-5">
        <div class="row d-flex justify-content-center pb-5 pt-2 pages">
            <div class="col-12 col-md-11 py-2">
                <h2>@Model.Anime.Title</h2>
                <p>колись буде рейтинг (*****)</p>
                <div class="row justify-content-center">
                    <div class="col-9 col-sm-5 manga-image">
                        <img src="@Model.Anime.ImageUrl">

                    </div>
                    <div class="col-12 col-sm-7 ">
                        <table class="table table-striped">
                            <tbody>
                                <tr>
                                    <th scope="col">Рік виходу</th>
                                    <td scope="col">@Model.Anime.ReleaseYear</td>
                                </tr>
                                <tr>
                                    <th scope="row">Жанри</th>
                                    <td> @string.Join(", ", Model.Anime.AnimeGenres.Select(mg => mg.GenreForAnime.Name)) </td>

                                </tr>
                                <tr>
                                    <th scope="row">Режисер</th>
                                    <td colspan="2">@Model.Anime.Director</td>

                                </tr>
                                <tr>
                                    <th scope="row">Озвучка</th>
                                    <td>@Model.Anime.Dubbing</td>

                                </tr>
                                <tr>
                                    <th scope="row">Студія</th>
                                    <td>@Model.Anime.Studio</td>

                                </tr>
                            </tbody>

                        </table>
                    </div>
                </div>
                <div class="description mt-5">
                    <h2>Опис</h2>
                    <p>
                        @Model.Anime.Description
                    </p>
                </div>
                <div class="player d-flex ">
                    <div class="d-flex mx-5 my-1">
                        <h4 class="me-4">Дивитись онлайн</h4>
                        <h4>Серія х</h4>
                    </div>
                    <div class="video mb-2">
                        <video id="my-video" class="video-js" controls preload="auto">
                            <source src="" type="" />
                            <p class="vjs-no-js">
                                To view this video please enable JavaScript, and consider upgrading to a
                                web browser that
                                <a href="https://videojs.com/html5-video-support/" target="_blank">
                                    supports HTML5
                                    video
                                </a>
                            </p>
                        </video>
                    </div>
                </div>
                <div class="control-buttons mt-2">

                    <h4>Сезони</h4>
                        <div class="season-buttons">
                            <button class="btn btn-danger">Сезон 1</button>
                            <button class="btn btn-outline-danger">Сезон 1</button>
                            <button class="btn btn-outline-danger">Сезон 1</button>
                        </div>
                        <h4 class="mt-3">Серії</h4>
                            <div class="episode-buttons">
                                <button class="btn btn-danger">Серія 1</button>
                                <button class="btn btn-outline-danger">Серія 1</button>
                                <button class="btn btn-outline-danger">Серія 1</button>
                                <button class="btn btn-outline-danger">Серія 1</button>
                                <button class="btn btn-outline-danger">Серія 1</button>
                                <button class="btn btn-outline-danger">Серія 1</button>
                                <button class="btn btn-outline-danger">Серія 1</button>
                                <button class="btn btn-outline-danger">Серія 1</button>
                                <button class="btn btn-outline-danger">Серія 1</button>
                            </div>
                </div>
                <div class="comments pt-5">
                    <h4>Коментарі</h4>
                </div>
            </div>
        </div>
    </div>
    <script src="https://vjs.zencdn.net/8.6.1/video.min.js"></script> <!-- player script-->
</body>