                    </div>
                </div>
                <div class="control-buttons mt-2">

                    <h4>Сезони</h4>
                    <div class="season-buttons">
                        @foreach (var season in Model.Seasons)
                        {
                            <a asp-controller="Anime" asp-action="AnimeDetails" asp-route-AnimeId="@season.AnimeId" asp-route-seasonId="@season.AnimeSeasonId">
                            <button class="btn btn-danger">@season.Title</button>
                            </a>
                        }
                    </div>
                        <h4 class="mt-3">Серії</h4>
                    <div class="episode-buttons">
                        @foreach (var episode in Model.Episodes)
                        {
                            <button class="btn btn-danger" onclick="playEpisode(@episode.EpisodeUrl)">Серія @episode.EpisodeNumber</button>
                        }
                    </div>
                </div>
                <div class="comments pt-5">
                    <h4>Коментарі</h4>
                </div>
            </div>
